{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "terminal-app",
  "version": "0.1.0",
  "identifier": "com.terminal-app.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "terminal-app",
        "width": 1080,
        "height": 640,
        "decorations": false,
        "transparent": true,
        "additionalBrowserArgs": "--disable-gpu-vsync --disable-gpu --disable-backing-store-limit --disable-gpu-compositing --disable-accelerated-2d-canvas --renderer-process-limit=1 --disable-features=CalculateNativeWinOcclusion --disable-site-isolation-trials --disable-dev-shm-usage --process-per-site --renderer-process-limit=1 --disable-cache --js-flags=\"--max-old-space-size=256\" --disable-breakpad --enable-aggressive-memory-purge --enable-features=HighEfficiencyMode,IntensiveWakeUpThrottling --disable-field-trial-config --disable-background-timer-throttling --memory-model=low"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
